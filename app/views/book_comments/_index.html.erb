  <% book_show.book_comments.each do |book_comment| %>
  <%= attachment_image_tag book_comment.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
  <%= link_to "Destroy", book_book_comment_path(book_comment.book_id,book_comment.id), method: :delete,remote: true,class:"btn btn-danger" %>
  <% end %>
  <br>
  <%= book_comment.user.name %>
  <br>
  <% end %>
