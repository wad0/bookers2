<h1>User info</h1>
<div class="profile-container">

<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
 <h3 class="profile-name">name<%= user.name %></h3>
 <h3 class="profile-introduction">introduction<%= user.introduction %></h3>
<% if user.id == current_user.id %>
    <p><%= link_to "edit", edit_user_path(user.id) %></p>
  <% end %>

 <h1>New Book</h1>
<%= form_with model:book,local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<p><%= f.submit 'Create Book' %></p>
<% end %>

<% books.each do |book| %>
<div>
<p><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></p>
  <%= link_to book_path(book.id) do %>
  <%= book.title %>
  <% end %>
  <%= book.body %>
</div>
<% end %>