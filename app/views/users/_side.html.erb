<div class="container">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>

<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table">
 <tbody>
  <tr><h3 class="profile-name">name<%= user.name %></h3></tr>
  <tr><h3 class="profile-introduction">introduction<%= user.introduction %></h3></tr>
<% if user.id == current_user.id %>
    <p><%= link_to "edit", edit_user_path(user.id),class:"btn btn-outline-secondary btn-block" %></p>
  <% end %>
 </tbody>
</table>

 <h2 class="mt-3">New Book</h2>
<%= form_with model:book,local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<p><%= f.submit 'Create Book' %></p>
<% end %>
</div>
</div>
</div>
