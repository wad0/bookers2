<%= render 'side', users: @users , books: @books, book: @book ,user: @user %>

<div class="col-md-8 offset-md-1">

  <h2>Users</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @users.each do |user| %>
      <td>
      <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
      </td>
      <td>
      <%= user.name %>
      </td>
      <td>
      <%= link_to "Show",user_path(user.id) %>
      <% end %>
      </td>
    </tr>
  </tbody>
</table>
</div>
